# NewWork Python Environment Variables

# Application
APP_NAME=NewWork API
APP_VERSION=0.3.0
DEBUG=True

# Server (로컬 전용)
HOST=127.0.0.1
PORT=8000

# LLM Provider API Keys
# 사용할 프로바이더의 API 키를 설정하세요
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here
MINIMAX_API_KEY=your-minimax-api-key-here
ZAI_API_KEY=your-zai-api-key-here

# Default LLM Settings
DEFAULT_PROVIDER=anthropic
DEFAULT_MODEL=claude-sonnet-4-20250514

# Database (자동으로 OS별 표준 위치에 생성됨)
# macOS: ~/Library/Application Support/NewWork/newwork.db
# Linux: ~/.local/share/NewWork/newwork.db
# Windows: %APPDATA%/NewWork/newwork.db
# DATABASE_URL=sqlite:///custom/path/newwork.db  # 선택적: 커스텀 경로

# CORS (로컬 전용)
CORS_ORIGINS=http://localhost:*
