# NewWork 환경 변수 예시
# 실제 사용 시 .env로 복사하고 값을 수정하세요
# cp .env.example .env

# 애플리케이션 설정
DEBUG=False
SECRET_KEY=change-this-to-a-random-secret-key-min-32-chars
LOG_LEVEL=INFO

# 백엔드 포트
BACKEND_PORT=8000

# 데이터베이스 설정
# 자동으로 OS별 표준 위치에 생성됨
# macOS: ~/Library/Application Support/NewWork/newwork.db
# Linux: ~/.local/share/NewWork/newwork.db
# Windows: %APPDATA%/NewWork/newwork.db
# DATABASE_URL=sqlite:///custom/path/newwork.db  # 선택적: 커스텀 경로

# AI Provider API Keys
# 사용할 프로바이더의 API 키를 설정하세요
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
DEEPSEEK_API_KEY=
MINIMAX_API_KEY=
ZAI_API_KEY=

# Default LLM Settings
DEFAULT_PROVIDER=anthropic
DEFAULT_MODEL=claude-sonnet-4-20250514

# CORS 설정 (로컬 전용)
CORS_ORIGINS=http://localhost:*

# 파일 업로드
MAX_UPLOAD_SIZE=10485760

# 로깅
LOG_FORMAT=json
